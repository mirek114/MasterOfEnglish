@model MasterOfEnglish.Models.EditEmailViewModel

@{
    ViewBag.Title = "EditPassword";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="container">
        <div id="loginbox" style="margin-top: 50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel">
                <div class="panel-heading" style="background-color: #2c2c2c; color: white">
                    <div class="panel-title">Wprowdzaź zmiany</div>
                </div>

                <div style="padding-top: 30px" class="panel-body">

                    <div style="display: none" class="alert alert-danger col-sm-12"></div>

                    <form class="form-horizontal" role="form">

                        <div class="form-group">
                            @Html.Label("Podaj nowy adres email: ", new { @class = "control-label col-md-6" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.NewEmail, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.NewEmail)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Potwierdź nowy adres email: ", new { @class = "control-label col-md-6" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.ConfirmNewEmail, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ConfirmNewEmail)
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-offset-6 col-md-6">
                                <input type="submit" value="Zapisz zmiany" class="btn btn-default" />
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    
}

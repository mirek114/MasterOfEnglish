@model MasterOfEnglish.Models.Word

@{
    ViewBag.Title = "LernAllWords";
}


<div class="container">
    <div style="margin-top: 50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel">
            <div class="panel-heading" style="background-color: #2c2c2c; color: white">
                <div class="panel-title">Tryb nauki</div>
            </div>

            <div style="padding-top: 30px" class="panel-body">

                <div style="display: none" class="alert alert-danger col-sm-12"></div>
                @if (Model == null)
                {
                    <h3>Gratulacje! Znasz już wszystkie słowa, przejdź do trybu SPRAWDŹ SIĘ, aby potwierdzić swoją wiedzę.</h3>
                }
                else
                {
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.PolishWord)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EnglishWord)
                            </th>
                            <th></th>
                        </tr>

                        <tr>
                            <td>
                                @Html.DisplayFor(model => model.PolishWord)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.EnglishWord)
                            </td>
                            <th></th>
                        </tr>
                        <tr>
                            <th>
                                @Html.ActionLink("Znam", "LernAllWords", new { id = Model.WordId, changeStatus = true }, new { @class = "btn btn-success col-sm-12" })
                            </th>
                            <th>
                                @Html.ActionLink("Wróć jeszcze do tego słowa", "LernAllWords", new { id = Model.WordId, changeStatus = false }, new { @class = "btn btn-info" })
                            </th>
                            <th></th>
                        </tr>

                    </table>
                }

                <form class="form-horizontal" role="form">
                </form>
            </div>

        </div>
    </div>
</div>

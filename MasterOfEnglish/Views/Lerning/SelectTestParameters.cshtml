@model MasterOfEnglish.Models.SelectTestParametersViewModel

@{
    ViewBag.Title = "SelectTestParameters";
}



@using (Html.BeginForm("SelectTestParameters", "Lerning", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
   
    <div class="container">
        <div id="loginbox" style="margin-top: 50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel">
                <div class="panel-heading" style="background-color: #2c2c2c; color: white">
                    <div class="panel-title">Wybierz ustawienia</div>
                </div>

                <div style="padding-top: 30px" class="panel-body">

                    <div style="display: none" class="alert alert-danger col-sm-12"></div>

                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <div class="col-sm-offset-1">
                                <b>Wyświetlaj słowa:</b>
                            </div>
                            <div class="col-sm-offset-1">
                                @Html.RadioButtonFor(model => model.languageOfWordsInTest, MasterOfEnglish.Controllers.LanguageOfWordsInTest.Polish, true)Polskie
            @Html.RadioButtonFor(model => model.languageOfWordsInTest, MasterOfEnglish.Controllers.LanguageOfWordsInTest.English)Angielskie
            @Html.RadioButtonFor(model => model.languageOfWordsInTest, MasterOfEnglish.Controllers.LanguageOfWordsInTest.Mixed)Mieszane
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-1">
                                <b>Zakres:</b>
                            </div>
                            <div class="col-sm-offset-1">
                                @Html.RadioButton("wordsRange", "allWords", true)Wszystkie słowa
            @Html.RadioButton("wordsRange", "wordsFromCategorys")Wybierz z kategorii 
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-1">
                                @Html.Label("Wybierz kategorie:")
                            </div>
                            <div class="col-sm-offset-1 col-sm-6">
                                @Html.ListBoxFor(model => model.selectedCategorys,
                Model.categorys.Select(x => new SelectListItem { Text = x.Name, Value = x.CategoryId.ToString() }), new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-1 col-md-8">
                                <input type="submit" value="Zatwierdź" class="btn btn-default" />
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
}

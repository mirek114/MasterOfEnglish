@model MasterOfEnglish.Models.TestViewModel

@{
    ViewBag.Title = "CorrectAnswer";
}


<div class="container">
    <div id="loginbox" style="margin-top: 50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel">
            <div class="panel-heading" style="background-color: #2c2c2c; color: white">
                <div class="panel-title">Odpowiedź poprawna!</div>
            </div>

            <div style="padding-top: 30px" class="panel-body">

                <div style="display: none" class="alert alert-danger col-sm-12"></div>

                <form class="form-horizontal" role="form">
                    @Html.ValidationSummary(true)

                    @Html.HiddenFor(model => model.word.UserId)
                    @Html.HiddenFor(model => model.word.WordId)
                    @Html.HiddenFor(model => model.word.Status)
                    @Html.HiddenFor(model => model.word.CategoryId)

                    @if (Model.languageOfWordsInTest == MasterOfEnglish.Controllers.LanguageOfWordsInTest.Polish)
                    {
                        <div class="form-group">
                            <div class="col-sm-offset-1">
                                <b>Słowo do przetłumaczenia:</b>
                                @Html.Label(Model.word.PolishWord, new { @class = "control-label" })
                            </div>
                            <div class="col-sm-offset-1">
                                @Html.Label("Odpowiedź:")
                                @Html.Label(Model.word.EnglishWord)
                            </div>
                        </div>
                    }
                    else if (Model.languageOfWordsInTest == MasterOfEnglish.Controllers.LanguageOfWordsInTest.English)
                    {
                        <div class="form-group">
                            <div class="col-sm-offset-1">
                                <b>Słowo do przetłumaczenia:</b>
                            </div>
                            @Html.Label(Model.word.EnglishWord, new { @class = "control-label" })
                            <div class="col-sm-offset-1">
                                @Html.Label("Odpowiedź:")
                                @Html.Label(Model.word.PolishWord)
                            </div>
                        </div>
                    }


                    <div class="form-group">


                        @Html.ActionLink("Umiem", "Test", new { id = Model.word.WordId, changeStatus = true }, new { @class = "btn btn-success col-sm-offset-1" })
                        @Html.ActionLink("Wróć jeszcze do tego słowa", "Test", new { id = Model.word.WordId, changeStatus = false }, new { @class = "btn btn-info" })

                    </div>
                </form>
            </div>

        </div>
    </div>
</div>


@model IEnumerable<MasterOfEnglish.Models.Word>

@{
    ViewBag.Title = "ShowAllWordsFromCategory";
}

<hr/>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PolishWord)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnglishWord)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PolishWord)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EnglishWord)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", "Word", new { id = item.WordId }, new { @class="btn btn-info"})
            @Html.ActionLink("Usuń", "Delete", "Word", new { id=item.WordId }, new { @class="btn btn-danger"})
        </td>
    </tr>
}

</table>

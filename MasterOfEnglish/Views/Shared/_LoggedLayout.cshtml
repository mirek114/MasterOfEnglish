<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Master Of English</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

</head>
<body style="background-color: lightgray">

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>


                <div class="navbar-inverse">
                    <div class="container">
                        <ul class="nav navbar-nav">
                            <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Baza słów<b class="caret"></b></a>
                                <ul class="dropdown-menu" style="background-color: #2c2c2c; color: white">
                                    <li>@Html.ActionLink("Wyświetl wszystkie", "ShowAllWords", "Word", null, new { @class = "navbar-text" })</li>
                                    <li>@Html.ActionLink("Dodaj słowo", "CreateWord", "Word", null, new { @class = "navbar-text" })</li>
                                </ul>
                            </li>
                            <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Kategorie<b class="caret"></b></a>
                                <ul class="dropdown-menu" style="background-color: #2c2c2c; color: white">
                                    <li>@Html.ActionLink("Wyświetl wszystkie", "ShowAllCategorys", "Category", null, new { @class = "navbar-text" })</li>
                                    <li>@Html.ActionLink("Dodaj kategorie", "CreateCategory", "Category", null, new { @class = "navbar-text" })</li>
                                </ul>
                            </li>
                            <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Nauka<b class="caret"></b></a>
                                <ul class="dropdown-menu" style="background-color: #2c2c2c; color: white">
                                    <li>@Html.ActionLink("Nauka wszystkich słów", "LernAllWords", "Lerning", new { clearCategory = true }, new { @class = "navbar-text" })</li>
                                    <li>@Html.ActionLink("Nauka wg kategorii", "LernWordsFromCategory", "Lerning", null, new { @class = "navbar-text" })</li>
                                    <li>@Html.ActionLink("Sprawdź sie", "SelectTestParameters", "Lerning", null, new { @class = "navbar-text" })</li>
                                </ul>
                            </li>
                            <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Konto<b class="caret"></b></a>
                                <ul class="dropdown-menu" style="background-color: #2c2c2c; color: white">
                                    <li>@Html.ActionLink("Zmień hasło", "EditPassword", "LoggedUser", null, new { @class = "navbar-text" })</li>
                                    <li>@Html.ActionLink("Zmień E-Mail", "EditEmail", "LoggedUser", null, new { @class = "navbar-text" })</li>
                                    <li>@Html.ActionLink("Usuń", "RemoveUser", "LoggedUser", null, new { @class = "navbar-text" })</li>
                                </ul>
                            </li>
                            <li>@Html.ActionLink("Wyloguj", "Index", "Home", null, null)</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">

        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
